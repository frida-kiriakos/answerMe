<tr>
  <td class="col-md-4"><%= question.content%></td>
  <td class="col-md-2"><%= question.answers_number%></td>
  <td class="col-md-1"><%= question.answer_type%></td>
  <td class="col-md-4">
    <% if question.answer_type != "text"%>
      <ul>
        <% question.answers.each do |answer|%>
          <li>
          <%= answer.content%>
          </li>
        <%end%>
      </ul>
    <%end%>
  </td>
  <td class="col-md-1"><%=link_to "Edit Question", edit_question_path(question), class: "btn btn-sm btn-default"%></td>
  <td class="col-md-2"><%= link_to "Edit Options", edit_answer_path(question_id: question.id), class: "btn btn-sm btn-success"%></td>
  <td class="col-md-1"><%= button_to "Delete", question_path(question), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-sm btn-danger"%></td>
</tr>