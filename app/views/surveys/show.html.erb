<%if user_signed_in? and current_user.id == @survey.user_id%>
  <h3 class="center"> <%=@survey.title%> <%=link_to "Edit title", edit_survey_path(@survey), class: "btn btn-sm btn-default"%></h3> 

  <% @survey.questions.each do |question|%>
  <div class=" col-md-4 col-md-offset-4 col-xs-3">
    <p><%= question.content%> <%=link_to "Edit", edit_question_path(question), class: "btn btn-sm btn-default"%></p>
    <% if question.answer_type != "text"%>
      <ul>
        <% question.answers.each do |answer|%>
          <li>
      	  <%= answer.content%>
          </li>
        <%end%>
      </ul>
      <p class="row row-grid ">
        <%=link_to "Edit answers", edit_answer_path(question), class: "btn btn-sm btn-default"%>
      </p>
    <%end%>
  </div>
  <%end%>
  
  <div class="row row-grid col-md-4 col-md-offset-4">
	  <h4>Need to add more questions? <br/><br/><%= link_to "Add more questions", add_question_path(@survey), class: "btn btn-default" %></h4>
  </div>
<%else%>
  <h3 class="center"> <%=@survey.title%></h3> 

  <% @survey.questions.each do |question|%>
  <div class=" col-md-4 col-md-offset-4 col-xs-3">
    <p><%= question.content%></p>
    <% if question.answer_type != "text"%>
      <ul>
        <% question.answers.each do |answer|%>
          <li>
          <%= answer.content%>
          </li>
        <%end%>
      </ul>
    <%end%>
  </div>
  <%end%>

<%end%>

<div class=" row row-grid col-md-4 col-md-offset-4 col-xs-3">
<h4>Share the following link with your audience to fill the survey</h4>
<%= link_to "Fill survey", fill_survey_path(@survey), target: "_blank", class: "btn btn-info"%>
</div>